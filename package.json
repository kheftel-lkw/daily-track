{
  "name": "daily-track-server",
  "version": "0.0.1",
  "description": "track stuff daily",
  "main": "server.js",
  "scripts": {
    "start:dev": "nodemon server.js",
    "server:dev": "npm run test && npm run build && npm run start:dev",
    "build:less": "lessc ./client/less/style.less ./public/css/style.css && copyfiles --flat ./client/css/*.css ./public/css",
    "build:bundle": "browserify ./client/app.js -o ./public/js/bundle.js",
    "build:clean": "rimraf ./public/css/* ./public/js/*",
    "watch:bundle": "watchify ./client/js/app.js -o ./public/js/bundle.js -v -d",
    "deploy:heroku": "git push heroku master",

    "lint": "clear && jshint *.js **/*.js",
    "test": "npm run lint && mocha test -u bdd -R spec",
    "build": "npm run test && npm run build:clean && npm run build:less && npm run build:bundle",
    "start": "npm run build && node server.js",
    "deploy": "npm run build && npm run deploy:heroku"
  },
  "author": "Kawika Heftel",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.3",
    "chartjs-plugin-zoom": "^0.7.0",
    "express": "^4.16.4",
    "express-validator": "^5.3.1",
    "http-errors": "^1.7.2",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "moment-round": "^1.0.1",
    "mongoose": "^5.5.1",
    "morgan": "^1.9.1",
    "pug": "^2.0.3"
  },
  "devDependencies": {
    "browserify": "^16.2.3",
    "copyfiles": "^2.1.0",
    "jshint": "^2.10.2",
    "less": "^3.9.0",
    "mocha": "^6.1.3",
    "nodemon": "^1.18.11",
    "rimraf": "^2.6.3",
    "should": "^13.2.3",
    "uglify-js": "^3.5.4",
    "watchify": "^3.11.1"
  },
  "engines": {
    "node": "8.11.1"
  }
}
