{
  "name": "daily-track-server",
  "version": "0.0.1",
  "description": "track stuff daily",
  "main": "server.js",
  "scripts": {
    "test": "mocha test -u bdd -R spec",
    "pretest": "npm run lint",
    "start": "node server.js",
    "start:dev": "nodemon server.js",
    "server:dev": "npm run test && npm run build && npm run start:dev",
    "lint": "jshint *.js **/*.js",
    "build:less": "lessc client/less/style.less public/css/style.css",
    "build:bundle": "browserify ./client/js/app.js -o ./public/js/bundle.js",
    "build:clean": "rimraf public/css/*, public/js/*",
    "prebuild": "npm run build:clean",
    "build": "npm run build:less && npm run build:bundle",
    "watch:bundle": "watchify ./client/js/app.js -o ./public/js/bundle.js -v"
  },
  "author": "Kawika Heftel",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "moment": "^2.24.0",
    "mongoose": "^5.4.20"
  },
  "devDependencies": {
    "browserify": "^16.2.3",
    "jshint": "^2.10.2",
    "less": "^3.9.0",
    "mocha": "^6.0.2",
    "nodemon": "^1.18.10",
    "rimraf": "^2.6.3",
    "should": "^13.2.3",
    "uglify-js": "^3.5.2",
    "watchify": "^3.11.1"
  },
  "engines": {
    "node": "8.11.1"
  }
}
