extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', placeholder='Meditation minutes, etc' name='name' value=(undefined===dataset ? '' : dataset.name))
    button.btn.btn-primary(type='submit') Save

  if errors 
   ul
    for error in errors
     li!= error.msg